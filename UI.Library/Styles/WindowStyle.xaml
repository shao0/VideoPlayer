<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converts="clr-namespace:UI.Library.Converts"
    xmlns:messageTools="clr-namespace:UI.Library.MessageTools">
    <converts:BorderClipConvert x:Key="BorderClipConverter" />
    <SolidColorBrush x:Key="HostButton.Background.Normal" Color="#19000000" />
    <SolidColorBrush x:Key="HostButton.Background.MouseOver" Color="#32000000" />
    <DrawingBrush
        x:Key="Host.Background"
        Stretch="Uniform"
        TileMode="Tile"
        Viewport="0,0,157,157"
        ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <ImageDrawing ImageSource="../Resources/cloud.png" Rect="0,0,157,157" />
        </DrawingBrush.Drawing>
    </DrawingBrush>
    <SolidColorBrush x:Key="HostButton.Foreground" Color="#00688F" />
    <Style x:Key="HostButton.Path" TargetType="Path">
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
        <Setter Property="StrokeThickness" Value="2" />
        <Setter Property="Margin" Value="7" />
    </Style>
    <Style x:Key="HostButton" TargetType="ButtonBase">
        <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
        <Setter Property="Background" Value="{StaticResource HostButton.Background.Normal}" />
        <Setter Property="Margin" Value="2" />
        <Setter Property="Foreground" Value="{StaticResource HostButton.Foreground}" />
        <Setter Property="Cursor" Value="Hand" />
        <Setter Property="Width" Value="30" />
        <Setter Property="Height" Value="30" />
        <Setter Property="Clip">
            <Setter.Value>
                <EllipseGeometry
                    Center="15,15"
                    RadiusX="15"
                    RadiusY="15" />
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="HostButton.Close"
        BasedOn="{StaticResource HostButton}"
        TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.Background>
                            <SolidColorBrush x:Name="PART_BackgroundBrush" Color="#19000000" />
                        </Grid.Background>
                        <Path Data="M 4,4 L 26,26 M 26,4 L 4,26" Style="{StaticResource HostButton.Path}">
                            <Path.Stroke>
                                <SolidColorBrush x:Name="PART_PathBrush" Color="#00688F" />
                            </Path.Stroke>
                            <Path.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform x:Name="PART_PathScale" ScaleY="{Binding RelativeSource={RelativeSource Self}, Path=ScaleX}" />
                                    <RotateTransform x:Name="PART_PathRotate" />
                                </TransformGroup>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#4B000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_PathBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#CCD00000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRotate" Storyboard.TargetProperty="Angle">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="180" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathScale" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1.2" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#19000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_PathBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#00688F" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRotate" Storyboard.TargetProperty="Angle">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="0" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathScale" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="HostButton.Min"
        BasedOn="{StaticResource HostButton}"
        TargetType="Button">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Grid>
                        <Grid.Background>
                            <SolidColorBrush x:Name="PART_BackgroundBrush" Color="#19000000" />
                        </Grid.Background>
                        <Path
                            Data="M 4,14 L 26,14"
                            Stroke="{TemplateBinding Foreground}"
                            Style="{StaticResource HostButton.Path}">
                            <Path.RenderTransform>
                                <ScaleTransform x:Name="PART_PathRender" ScaleY="{Binding RelativeSource={RelativeSource Self}, Path=ScaleX}" />
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#4B000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRender" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1.2" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#19000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRender" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style
        x:Key="HostButton.Normal"
        BasedOn="{StaticResource HostButton}"
        TargetType="ToggleButton">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ToggleButton">
                    <Grid>
                        <Grid.Background>
                            <SolidColorBrush x:Name="PART_BackgroundBrush" Color="#19000000" />
                        </Grid.Background>
                        <Path
                            x:Name="ButtonPath"
                            Data="M 4,4 L 26,4 26,26 4,26 Z"
                            Stroke="{TemplateBinding Foreground}"
                            Style="{StaticResource HostButton.Path}">
                            <Path.RenderTransform>
                                <ScaleTransform x:Name="PART_PathRender" ScaleY="{Binding RelativeSource={RelativeSource Self}, Path=ScaleX}" />
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="ButtonPath" Property="Data" Value="M 2,6 L 24,6 24,28 2,28 Z M 6,6 6,2 28,2 28,24 24,24" />
                        </Trigger>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#4B000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRender" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1.2" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <ColorAnimationUsingKeyFrames Storyboard.TargetName="PART_BackgroundBrush" Storyboard.TargetProperty="Color">
                                        <ColorAnimationUsingKeyFrames.KeyFrames>
                                            <LinearColorKeyFrame KeyTime="00:00:0.2" Value="#19000000" />
                                        </ColorAnimationUsingKeyFrames.KeyFrames>
                                    </ColorAnimationUsingKeyFrames>
                                    <DoubleAnimationUsingKeyFrames Storyboard.TargetName="PART_PathRender" Storyboard.TargetProperty="ScaleX">
                                        <DoubleAnimationUsingKeyFrames.KeyFrames>
                                            <LinearDoubleKeyFrame KeyTime="00:00:0.2" Value="1" />
                                        </DoubleAnimationUsingKeyFrames.KeyFrames>
                                    </DoubleAnimationUsingKeyFrames>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="Window.MessageHost" TargetType="Window">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="MaxHeight" Value="{x:Static SystemParameters.MaximizedPrimaryScreenHeight}" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="WindowChrome.WindowChrome">
            <Setter.Value>
                <WindowChrome CaptionHeight="50" ResizeBorderThickness="5" />
            </Setter.Value>
        </Setter>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Window">
                    <Border
                        Margin="5"
                        Background="#eaeaea"
                        BorderBrush="#33000000"
                        BorderThickness="1">
                        <Grid Background="{StaticResource Host.Background}">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="50" />
                                <RowDefinition />
                            </Grid.RowDefinitions>
                            <Grid
                                Grid.Row="1"
                                messageTools:MessageAttached.MessageHost="{Binding RelativeSource={RelativeSource TemplatedParent}}"
                                ClipToBounds="True">
                                <!--<Grid.Effect>
                                    <DropShadowEffect Opacity="1" ShadowDepth="0" />
                                </Grid.Effect>-->
                                <ContentPresenter Margin="2" />
                            </Grid>
                            <Border Grid.Row="0">
                                <Border.Effect>
                                    <DropShadowEffect Opacity="0.4" ShadowDepth="1" />
                                </Border.Effect>
                                <DockPanel Background="#efefef">
                                    <StackPanel
                                        VerticalAlignment="Center"
                                        DockPanel.Dock="Left"
                                        Orientation="Horizontal">
                                        <Image Margin="10,5" Source="{TemplateBinding Icon}" />
                                        <TextBlock VerticalAlignment="Center" Text="{TemplateBinding Title}" />
                                    </StackPanel>
                                    <StackPanel
                                        Margin="0,0,10,0"
                                        HorizontalAlignment="Right"
                                        DockPanel.Dock="Right"
                                        Orientation="Horizontal">
                                        <Button messageTools:MessageAttached.HostEventName="Min" Style="{StaticResource HostButton.Min}" />
                                        <ToggleButton
                                            Name="ButtonNormal"
                                            messageTools:MessageAttached.HostEventName="Normal"
                                            IsChecked="False"
                                            Style="{StaticResource HostButton.Normal}" />
                                        <Button messageTools:MessageAttached.HostEventName="Close" Style="{StaticResource HostButton.Close}" />
                                    </StackPanel>
                                </DockPanel>
                            </Border>
                        </Grid>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="WindowState" Value="Maximized">
                            <Setter TargetName="ButtonNormal" Property="IsChecked" Value="True" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>