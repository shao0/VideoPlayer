<prism:PrismApplication
    x:Class="SelfVideoPlayer.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:prism="http://prismlibrary.com/">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/UI.Library;Component/Styles/WindowStyle.xaml" />
                <ResourceDictionary Source="/UI.Library;Component/Styles/ScrollViwerStyle.xaml" />
                <ResourceDictionary Source="/UI.Library;Component/Styles/ListBoxStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <Style BasedOn="{StaticResource ScrollViewerNativeBaseStyle}" TargetType="ScrollViewer" />
            <Style
                x:Key="Window.MessageHost.Style"
                BasedOn="{StaticResource Window.MessageHost}"
                TargetType="Window">
                <Setter Property="Icon" Value="Icon.ico" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</prism:PrismApplication>
